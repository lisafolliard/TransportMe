<h1>Transport Me!</h1>
<h2>Ask transportation-related questions and get answers from locals</h2>
  <div class='container'>
        <table>
          <tr>
            {{#each model as |question|}}
              <li>
                <td>{{#link-to 'question' question.id}}
                {{question.content}} {{/link-to}} &nbsp; Asked by {{question.author}}
                <button class="btn btn-default btn-xs"{{action 'deleteQuestion' question}}>
                  <span class='glyphicon glyphicon-trash'></span></button>
              </td>
              </li>
            {{/each}}
          </tr>
        </table>
  </div>
<br>

