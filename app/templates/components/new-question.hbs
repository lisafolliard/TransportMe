{{#if addNewQuestion}}
  <h2>New Question</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{textarea value=content id="content" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes" class="form-control"}}
      </div>

      <button class="btn btn-default btn-xs" {{action 'save1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary btn-md" {{action 'questionFormShow'}}>Ask New Question</button>
{{/if}}
