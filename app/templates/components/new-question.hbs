{{#if addNewQuestion}}
  <div class='container'>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="author">Name</label>
        {{input value=author id="author" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes</label>
        {{input value=notes id="notes" class="form-control"}}
      </div>

      <button class="btn btn-default btn-sm" {{action 'save1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary btn-md" {{action 'questionFormShow'}}>Ask New Question</button>
{{/if}}
