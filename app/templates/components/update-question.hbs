{{#if updateQuestionForm}}
    <div>
      <form>
        <div class="form-group">
          <label for="content">Content</label>
          {{input value=question.content id="content"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=question.author id="author"}}
        </div>

        <div class="form-group">
          <label for="notes">Notes</label>
          {{input value=question.notes id="notes"}}
        </div>

        <button class="btn btn-default btn-xs" {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-default btn-xs" {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
