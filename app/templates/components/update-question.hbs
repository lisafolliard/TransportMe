{{#if updateQuestionForm}}
    <div>
      <form>
        <div class="form-group">
          <label for="content">Content</label>
          {{input value=question.content id="content" class='form-control'}}
        </div>

        <div class="form-group">
          <label for="author">Name</label>
          {{input value=question.author id="author" class='form-control'}}
        </div>

        <div class="form-group">
          <label for="notes">Notes</label>
          {{input value=question.notes id="notes" class='form-control'}}
        </div>

        <button class="btn btn-default btn-sm" {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-default btn-md" {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
