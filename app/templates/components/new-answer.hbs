{{#if addNewAnswer}}
  <h2>New Answer</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=answer.name id="name"}}
      </div>

      <div class="form-group">
        <label for="response">Response</label>
        {{input value=answer.response id="response"}}
      </div>

      <button class="btn btn-default btn-xs" {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary btn-md" {{action 'answerFormShow'}}>Add New Answer</button>
{{/if}}
