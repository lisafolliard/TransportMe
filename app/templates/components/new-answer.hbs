{{#if addNewAnswer}}
  <h2>New Answer</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="response">Answer</label>
        {{textarea value=response id="response" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="name">Author</label>
        {{input value=name id="name" class="form-control"}}
      </div>

      <button class="btn btn-default btn-xs" {{action 'saveAnswer'}}>Save</button>

    </form>
  </div>
{{else}}
  <button class="btn btn-primary btn-md" {{action 'answerFormShow'}}>Add New Answer</button>
{{/if}}
